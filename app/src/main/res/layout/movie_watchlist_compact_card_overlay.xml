<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/watch_list_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/watch_list_blur"
        android:layout_width="@dimen/compact_card_image_width"
        android:layout_height="@dimen/compact_card_image_height"
        android:background="#000000"
        android:alpha=".50"/>

    <ImageView
        android:id="@+id/watchlist_icon"
        android:layout_width="@dimen/compact_card_overlay_image_height"
        android:layout_height="@dimen/compact_card_overlay_image_height"
        android:layout_marginLeft="@dimen/compact_card_overlay_margin"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/watchlist_overlay_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>